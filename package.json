{
  "name": "kopsi-pekanbaru",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "prisma generate --schema packages/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema packages/db/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema packages/db/prisma/schema.prisma",
    "prisma:reset": "prisma migrate reset --force --schema packages/db/prisma/schema.prisma",
    "postinstall": "prisma generate --schema packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "prisma": "^6.14.0"
  }
}
