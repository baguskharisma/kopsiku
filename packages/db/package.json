{
    "name": "@kopsi/db",
    "version": "0.0.1",
    "description": "Database package for Kopsi Pekanbaru",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "prisma"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:seed": "tsx src/seed.ts",
        "db:seed:dev": "NODE_ENV=development tsx src/seed.ts",
        "db:studio": "prisma studio"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@types/bcrypt": "^6.0.0",
        "@types/prompts": "^2.4.9",
        "tsx": "^4.0.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "prompts": "^2.4.2"
    }
}
